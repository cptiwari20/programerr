<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="align-center">Edit</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%=blog_id%>/comments/:comment_id/edit?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="commentText" value="<%=comment.commentText%>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-light btn-block">Comment</button>
                </div>
            </form>
              <a class="auto-align-right" href="/blogs/<%=blog_id%>">Back to Blog</a>
            <p><a href="/">Home</a></p>
        </div>
    </div>
</div>


<% include ../partials/footer %>
