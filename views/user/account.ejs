<% include ../partials/header %>

<div class="container">
       <header id="main-header">
         <div class="row no-gutters">
           <div class="col-md-5 col-lg-4 col-sm-12 rounded-circle">
             <img src="<%=user.image%>" alt="<%=user.username%>">
           </div>
           <div class="col-md-7 col-lg-8 col-sm-12">
             <div class="d-flex flex-column">
               <div class="p-5 bg-dark text-white">
                 <div class=" name d-flex flex-row justify-content-between align-items-center">
                   <h1 class="display-4"><%=user.username%></h1>
                   <div><i class="fab fa-twitter"><a href="https://twitter.com/<%=user.twitterId%>"></a></i></div>
                   <div><i class="fab fa-facebook"><a href="https://facebook.com/<%=user.facebookId%>"></a></i></div>
                   <div><i class="fab fa-instagram"><a href="https://googleId.com/<%=user.googleId%>"></a></i></div>
                   <% if(currentUser){ %>
                    <div class="text-white">
                      <i class="fab fas fa-pencil-alt"></i>
                        <a href="/user/<%=user._id%>/edit">
                          Edit Your Profile
                        </a>
                    </div>
                     <% } %>
                 </div>
               </div>
             </div>
           </div>
         </div>
       </header>
       <div class="row">
         <div class="col-md-9 col-lg-9">
           <div class="row mt-3" style="display:flex; flex-wrap: wrap;">
           <% user.blog.forEach(function(blog){ %>
             <div class="col-lg-8 col-md-10 mx-auto">
               <div class="post-preview">
                   <div class="row">
                     <div class="com-lg-3 col-md-3">
                       <img class="img-fluid rounded" src="<%= blog.image %>" alt="card image cap">
                     </div>
                     <div class="col-md-9 col-lg-9">
                       <a class="text-dark" href="/blogs/<%=blog._id%>">

                         <h2 class="post-title">
                           <%= blog.title %>
                         </h2>
                         <h3 class="post-subtitle">
                          Lorem ipsum dolor sit amet
                         </h3>
                       </a>
                       <p class="post-meta">Posted by
                         <a href="/user/<%=blog.author.id%>/account"><%=blog.author.username%></a>
                         on September 24, 2018</p>
                     </div>
                   </div>
                 </div>


                 <hr>
                   </div>
           <% }); %>
           </div>
           <div class="clearfix">
               <a class="btn btn-secondary float-right" href="#">Older Posts &rarr;</a>
           </div>
         </div>
       </div>
     </div>
       <section id="footer" class="p-5 text-white bg-dark">
          <a class="btn btn-outline-light" href="/"><i class="fa fa-home"></i>Home</a>
       </section>
     </div>

<% include ../partials/footer %>
