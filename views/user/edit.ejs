<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 70%; margin: 25px auto;">
            <form action="/user/:id?_method=PUT" method="post">
               <div class="form-group">
                 <label class="form-control-label" for="#Name"></label>
                 <input class="form-control" type="text" name="title" id="Name" value="<%=user.name%>">
               </div>
               <div class="form-group">
                 <label class="form-control-label" for="#category">Category</label>
                 <select class="form-control" name="category">
                   <option value="Web-development">Web-development</option>
                   <option value="Health-care">Health care</option>
                   <option value="Peronality-development">Peronality development</option>
                   <option value="wealth-creation">wealth-Creation</option>
                   <option value="Personal-Blog">Personal Blog</option>
                 </select>
               </div>
               <div class="form-group p-3 bg-light">
                 <label class="form-control-label" for="#file">Image Upload</label>
                 <input class="form-control-file" type="file" name="imageUpload" id="file" value="">
                 <small id="fileHelp" class="form-text text-muted">
                   Max size 3MB; or Put Image url below;
                 </small>
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="image" placeholder="Image Url">
               </div>
               <div class="form-group">
                 <label class="form-control-label" for="#content">Body</label>
                 <textarea name="body" class="editor1 form-control" id="content">
                 </textarea>
               </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-light btn-block">Post</button>
                </div>
            </form>
              <a href="/blogs">All Blogs</a>
            <p><a href="/">Home</a></p>
        </div>
    </div>
</div>


<% include ../partials/footer %>
